<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlueBar" parent="android:Widget.Material.RatingBar.Indicator">
        <item name="colorControlNormal">#DCDCDC</item>
        <item name="colorControlActivated">#00AFF0</item>
    </style>

    <style name="GreenBar" parent="android:Widget.Material.RatingBar.Indicator">
        <item name="colorControlNormal">#DCDCDC</item>
        <item name="colorControlActivated">#169B33</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


</resources>
