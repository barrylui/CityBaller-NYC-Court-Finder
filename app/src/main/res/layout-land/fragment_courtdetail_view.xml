<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courtdv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="barrylui.nycbball.CourtdetailView"
    android:background="#7AC142">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/courtname"
        android:text="DETAILS HERE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="33dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></TextView>

    <Button
        android:layout_marginRight="15dp"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:id="@+id/button"
        android:background="#0A6742"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></Button>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="Court Viewer"
        android:id="@+id/button2"
        android:background="#0A6742"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_below="@id/ratingBar"
        android:layout_toRightOf="@id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21dp"
        android:text="Medium Text"
        android:id="@+id/dtv"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:background="#0A6742"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:isIndicator="true"
        android:layout_below="@id/courtname"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="159dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/atom1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--
       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Fullcourt"
           android:id="@+id/checkBox"
           android:checked="false"
           android:layout_below="@+id/button"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="30dp"
           android:clickable="false"/>
           -->


   </RelativeLayout>
