<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courtdv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="barrylui.nycbball.CourtdetailView"
    android:background="#068B35">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/courtname"
        android:text="DETAILS HERE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="33dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignTop="@+id/imageView"></TextView>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:id="@+id/button"
        android:layout_below="@+id/ratingBar"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:background="#00531C"
        android:textSize="18dp"
        android:textColor="#ffffff"></Button>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Court Viewer"
        android:id="@+id/button2"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00531C"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22dp"
        android:text="Medium Text"
        android:id="@+id/dtv"
        android:layout_below="@+id/button"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"
        android:theme="@style/RatingBar"/>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/imageView"
        android:src="@drawable/atom2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--
       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Fullcourt"
           android:id="@+id/checkBox"
           android:checked="false"
           android:layout_below="@+id/button"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="30dp"
           android:clickable="false"/>
           -->


   </RelativeLayout>
